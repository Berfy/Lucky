<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bg"
    android:orientation="vertical">

    <cn.berfy.framework.support.views.StatusMarginBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></cn.berfy.framework.support.views.StatusMarginBar>

    <RelativeLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <cn.berfy.framework.support.views.scaleable.ScaleableImageView
                android:id="@+id/title_left_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingBottom="18dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:paddingTop="18dp"
                android:src="@mipmap/back"
                android:visibility="visible"
                ripple:scaleRatio="1.5" />

            <cn.berfy.framework.support.views.scaleable.ScaleableTextView
                android:id="@+id/title_left_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="gone"
                ripple:scaleRatio="1.5" />

            <LinearLayout
                android:id="@+id/layout_second_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="@color/gray" />

                <cn.berfy.framework.support.views.scaleable.ScaleableTextView
                    android:id="@+id/tv_second_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="left|center_vertical"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:visibility="visible"
                    ripple:scaleRatio="1.3" />

            </LinearLayout>
        </LinearLayout>


        <cn.berfy.framework.support.views.scaleable.ScaleableTextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp"
            ripple:scaleRatio="1.5" />

        <LinearLayout
            android:id="@+id/layout_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="60dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <cn.berfy.framework.support.views.scaleable.ScaleableImageView
                    android:id="@+id/title_subjoin_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="15dp"
                    android:visibility="gone"
                    ripple:scaleRatio="1.5" />

                <cn.berfy.framework.support.views.scaleable.ScaleableImageView
                    android:id="@+id/title_right_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="15dp"
                    android:visibility="gone"
                    ripple:scaleRatio="1.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <cn.berfy.framework.support.views.scaleable.ScaleableTextView
                    android:id="@+id/title_righttxt_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:visibility="gone"
                    ripple:scaleRatio="1.5" />

                <cn.berfy.framework.support.views.scaleable.ScaleableTextView
                    android:id="@+id/title_righttxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="invisible"
                    ripple:scaleRatio="1.5" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/titlebar_shadow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/gray" />
</LinearLayout>